{{#if isAdmin}}

<section class="m-5 ">
  <!-- Button trigger modal ajouter un article -->
  <div class="row d-flex justify-content-center ">
    <button type="button" class="btn btn-info  " data-toggle="modal" data-target="#ModalAddArticle">
      Creer un article
    </button>
  </div>

  <!-- Modal ajouter un article -->
  <div class="modal fade" id="ModalAddArticle" tabindex="-1" role="dialog" aria-labelledby="ModalAddArticleLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">

        <div class="modal-header">
          <h5 class="modal-title">Creer un article</h5>
        </div>

        <form action="/Article" method="post" enctype="multipart/form-data">
          <div class="modal-body">
            <div class="form-group">
              <label>Titre :</label>
              <input type="text" class="form-control" name='title'>
            </div>
            <div class="control">
              <textarea class="textarea" name="content"></textarea>
              <script>CKEDITOR.replace('content');</script>
            </div>
            <div class="form-group m-2">
              <label>Photo :</label>
              <input type="file" class="form-control" name='image'>
            </div>
            <div class="form-group">
              <label>Photos galleries:</label>
              <input type="file" class="form-control" name='imageGallery' multiple>
            </div>
          </div>

          <div class="modal-footer ">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
            <button type="submit" class="btn btn-primary">Enregistrer</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

{{/if}}

<section class="m-5 p-3">
  <div class="container">
    <div class="row">
      {{#each dbArticle}}
      <div class="col-md-4 ">
        <div class="card Mycard  m-3 p-3" style="width: 100%;">
          <div class="row">
            <div class="col-md-12">
              <img src="{{ image }}" class="card-img-top" alt="..."
                style="max-width: 350px; max-height: 200px; display: block;">
            </div>
          </div>

          <div class="container">
            <div class="row">
              {{#each imageGallery}}
              <img src="{{ filename }}" class="card-img-top m-2" alt="{{ fieldname }}"
                style="height:60px; width: 60px;">
              {{/each}}
            </div>
          </div>

          <div class="card-body">
            <h5 class="card-title"> {{ title }} </h5>
            <p class="card-text textLimit" style="text-align: justify;"> {{ content }} </p>
            <p>Publié le {{ moment createDate format="DD-MM-YYYY"}}</p>
          </div>
          <div class="row mx-auto">
            <div class="col-md-12">
              <a href="/ArticleSingle/{{_id}}" class="btn btn-info shadow">Voir l'article</a>
            </div>
          </div>
        </div>
      </div>
      {{/each }}
    </div>
  </div>
</section>

<section>
  <div class="container text-center ">
    <div class="row">
      <div class="col-md-12">
        <h1 style="background-color: white;">ici prochainement, les moments partagés</h1>
      </div>
    </div>
  </div>
  <div class="container d-flex justify-content-center ">
    <div class="row" >
      <div class=" col-xs-2">
        <h1 class="display-1" id="clignotant-1">.</h1>
      </div>
      <div class=" col-xs-2">
        <h1 class="display-1" id="clignotant-3">.</h1>
      </div>
      <div class="col-xs-2">
        <h1 class="display-1" id="clignotant-2">.</h1>
      </div>
    </div>
  </div>
  </div>
</section>

<style>
  .textLimit {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    line-height: 16px;
    max-height: 320px;

    /* The number of lines to be displayed */
    -webkit-line-clamp: 5;
    -webkit-box-orient: vertical;
  }


  #clignotant-1 {
    animation: clignotant 2s infinite;
  }

  #clignotant-2 {
    animation: clignotant 1s infinite;
  }

  #clignotant-3 {
    animation: clignotant 3s infinite;
  }

  @keyframes clignotant {
    0% {
      opacity: 1;
    }

    50% {
      opacity: 0;
    }

    100% {
      opacity: 1;
    }
  }
</style>