<section class="m-5 p-3">
    <nav class="navbar navbar-expand-lg navbar-light fixed-top bg-navbar " style='box-shadow: #777 0px 3px 5px'>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="d-md-flex d-block flex-row mx-md-auto mx-0">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item active ">
                        <a class="nav-link nav-link-ltr" href="/">Accueil <span class="sr-only">(current)</span></a>
                    </li>

                    <li class="nav-item active ">
                        <a class="nav-link  nav-link-ltr" href="/Article">Articles</a>
                    </li>

                    <li class="nav-item active ">
                        <a class="nav-link  nav-link-ltr" href="/Atelier">Ateliers</a>
                    </li>

                    <li class="nav-item active ">
                        <a class="nav-link  nav-link-ltr" href="/Contact">Contact</a>
                    </li>
                </ul>
                {{#if user}}
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link nav-link-ltr" href="/Profil/{{sess.userId}}">Mon Compte</a>
                    </li>

                    <!-- Button trigger modal logout-->
                    <li class="nav-item active ">
                        <a class="nav-link nav-link-ltr" data-toggle="modal" data-target="#logout" href="#">Se
                            deconnecter</a>
                    </li>
                </ul>
                {{else}}

                <ul class="navbar-nav">
                    <!-- Button trigger modal register-->
                    <li class="nav-item active ">
                        <a class="nav-link nav-link-ltr" data-toggle="modal" data-target="#register-modal-lg"
                            href="#">S'inscrire</a>
                    </li>

                    <!-- Button trigger modal register-->
                    <li class="nav-item active ">
                        <a class="nav-link nav-link-ltr" data-toggle="modal" data-target="#login" href="#">Se
                            connecter</a>
                    </li>
                </ul>
                {{/if}}

                {{#if isAdmin}}
                <ul class="navbar-nav">
                    <li class="nav-item active  ">
                        <a class="nav-link  nav-link-ltr" href="/Agenda">Agenda</a>
                    </li>

                    <li class="nav-item active  ">
                        <a class="nav-link nav-link-ltr" href="/admin">Admin</a>
                    </li>

                    <li class="nav-item active">
                        <h3 class="nav-link">Vous avez {{ counter dbMessageNotChecked }}
                            Messages</h3>
                    </li>
                </ul>
                {{else}}

                {{/if}}
            </div>
        </div>
    </nav>
</section>


