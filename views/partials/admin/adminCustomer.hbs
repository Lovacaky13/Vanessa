<section>
    <table class="table table-responsive ">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>E-mail</th>
                <th>adresse</th>
                <th>Edit
                <th>
            </tr>
        </thead>
        {{#each dbCustomer}}
        <tbody>
            <tr>
                <td style="width: 15%">{{lastname}}</td>
                <td style="width: 15%">{{firstname}}</td>
                <td style="width: 35%">{{email}}</td>
                <td style="width: 20%">{{adress}} {{zip}} {{city}}</td>
                <td style="width: 20%">

                    <!-- Button trigger modal delete client -->
                    <button type="button" class="btn btn-danger" data-toggle="modal"
                        data-target="#modalDeleteCustomer{{_id}}">
                        <i class="fas fa-trash-alt"></i>
                    </button>

                    <!-- Button trigger modal edit client -->
                    <button type="button" class="btn btn-warning" data-toggle="modal"
                        data-target="#updateCustomer{{_id}}">
                        <i class="fas fa-pencil-alt"></i>
                    </button>
                </td>
            </tr>
        </tbody>
        {{/each}}
    </table>
</section>

<!-- Modal Btn Modifier une fiche client -->
{{#each dbCustomer}}
<div class="modal fade" id="updateCustomer{{_id}}" tabindex="-1" role="dialog" aria-labelledby="modalModifCustomer"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Modification Fiche Client</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form action="/adminCustomer/{{_id}}?_method=PUT" method="post">
                <div class="modal-body">

                    <div class="form-group">
                        <label>Nom</label>
                        <input type="text" class="form-control" value="{{ lastname }}" name="lastname">
                    </div>
                    <div class="form-group">
                        <label> Prénom</label>
                        <input type="text" class="form-control" value="{{ firstname }}" name="firstname">
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" value="{{ email }}" name="email">
                    </div>

                    <div class="form-group">
                        <label>adresse</label>
                        <input type="adress" class="form-control" value="{{ adress }}" name="adress">
                    </div>

                    <div class="form-group">
                        <label>CP</label>
                        <input type="zip" class="form-control" value="{{ zip }}" name="zip">
                    </div>

                    <div class="form-group">
                        <label>Ville</label>
                        <input type="city" class="form-control" value="{{ city }}" name="city">
                    </div>



                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-danger"> Confirmer</button>
                </div>
            </form>

        </div>
    </div>
</div>
{{/each}}

<!-- Modal Btn Supprimer une fiche client-->

{{#each dbCustomer}}
<div class="modal fade" id="modalDeleteCustomer{{_id}}" tabindex="-1" role="dialog"
    aria-labelledby="modalDeleteCustomerLabel" aria-hidden="true">

    <form action="/adminCustomer/{{_id}}/?_method=DELETE" method="post">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="modalDeleteCustomerLabel">Etes-vous sûr de supprimer la fiche client de
                        <span style="color:red"> {{firstname}} {{lastname}}</span> ?</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-danger">Confirmer</button>
                </div>
            </div>
        </div>
    </form>
</div>
{{/each}}