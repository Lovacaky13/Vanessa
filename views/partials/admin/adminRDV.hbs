<section>
    <table class="table table-responsive ">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>E-mail</th>
                <th>adresse</th>
                <th>Edit
                <th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td style="width: 15%"></td>
                <td style="width: 15%"></td>
                <td style="width: 35%"></td>
                <td style="width: 20%"></td>
                <td style="width: 20%">

                    <!-- Button trigger modal delete user -->
                    <button type="button" class="btn btn-danger" data-toggle="modal"
                        data-target="#modalDeleteArticle{{_id}}">
                        <i class="fas fa-trash-alt"></i>
                    </button>

                    <!-- Button trigger modal edit user -->
                    <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#updateUser{{_id}}">
                        <i class="fas fa-pencil-alt"></i>
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</section>

<!-- Modal Btn Modifier -->
{{#each dbUser}}
<div class="modal fade" id="updateUser{{_id}}" tabindex="-1" role="dialog" aria-labelledby="modalModifArticle"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Modification Fiche Utilisateur</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form action="/adminUser/{{_id}}?_method=PUT" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Email</label>
                        <input type="email" class="form-control" id="inputEmail" value="{{ email }}" name="email">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Nom</label>
                        <input type="text" class="form-control" id="inputLastName" value="{{ lastname }}"
                            name="lastname">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1"> Prénom</label>
                        <input type="text" class="form-control" id="inputFirstName" value="{{ firstname }}"
                            name="firstname">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-danger"> Confirmer</button>
                </div>
            </form>

        </div>
    </div>
</div>
{{/each}}

<!-- Modal Btn Supprimer -->

{{#each dbUser}}
<div class="modal fade" id="modalDeleteArticle{{_id}}" tabindex="-1" role="dialog"
    aria-labelledby="modalDeleteArticleLabel" aria-hidden="true">

    <form action="/adminUser/{{_id}}/?_method=DELETE" method="post">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title h5admin" id="modalDeleteArticleLabel">Etes-vous sûr de supprimer le compte de
                        <span style="color:red"> {{firstname}}</span> ?</h5>
                    </h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-danger">Confirmer</button>
                </div>
            </div>
        </div>
    </form>
</div>
{{/each}}