<section>
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>
                    <h4>Email</h4>
                </th>
                <th>
                    <h4>Objet</h4>
                </th>
                <th>
                    <h4>Reçu le</h4>
                </th>
                <th>
            </tr>
            </tr>
        </thead>
        {{#each dbMessageNotChecked }}
        <tbody>
            <tr>
                <td style="width: 25%">
                    <h5>{{email}}</h5>
                </td>
                <td style="width: 25%">
                    <h5>{{subject}}</h5>
                </td>
                <td style="width: 25%">
                    <h5>{{moment createDate format="DD-MM-YYYY, HH:mm"}}</h5>
                </td>
                <td style="width: 25%">
                    <div class="row">
                        <div class="col-md-6">

                            <!-- Button trigger modal delete Message -->
                            <button type="button" class="btn btn-danger" data-toggle="modal"
                                data-target="#modalDeleteMessageNotChecked{{_id}}">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>

                        <div class="col-md-6">
                            <!-- Button trigger modal affiche Message -->
                            <a class="btn btn-info" data-toggle="modal"
                                data-target="#modalAfficheMessageNotChecked{{_id}}" role="button">
                                <h5>Voir le message</h5>
                            </a>
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
        {{/each}}
    </table>
</section>



<!-- Modal Btn Supprimer -->

{{#each dbMessage}}
<div class="modal fade" id="modalDeleteMessageNotChecked{{_id}}" tabindex="-1" role="dialog"
    aria-labelledby="modalDeleteMessageLabel" aria-hidden="true">

    <form action="/Contact/{{_id}}/?_method=DELETE" method="post">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title h5admin" id="modalDeleteArticleLabel">Etes-vous sûr de supprimer le message
                        de
                        <span style="color:red"> {{email}}</span> ?</h5>
                    </h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-danger">Confirmer</button>
                </div>
            </div>
        </div>
    </form>
</div>
{{/each}}

<!-- Modal Btn voir message -->

{{#each dbMessage}}
<div class="modal fade" id="modalAfficheMessageNotChecked{{_id}}" tabindex="-1" role="dialog"
    aria-labelledby="modalAfficheMessageLabel" aria-hidden="true">

    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header p-3 m-3">
                <div class="row">
                    <h4 class="modal-title h5admin" id="modalAfficheMessageLabel">Message de
                        <span style="color:red"> {{ author }}</span> </h4>
                </div>
                <div class="row">
                    <h5>reçu le {{moment createDate format="DD-MM-YYYY"}} à {{moment createDate format="HH:mm"}}</h5>
                </div>
            </div>

            <div class="modal-body">
                <div class="row p-3 ">
                    <h5> Marquer comme Lu : </h5>
                    <form action="/Contact/{{_id}}?_method=PUT" method="post" enctype="text/plain">
                        <button type="submit" class="btn btn-outline-secondary"> Ok </button>
                    </form>
                </div>
                <div class="row p-3">
                </div>
                <div class="row p-3">
                    <h5> <span style="text-decoration: underline; font-weight:bold; ">adresse mail:</span> {{ email }}
                    </h5>
                </div>
                <div class="row p-3">
                    <h5><span style="text-decoration: underline;font-weight:bold;">Objet:</span> {{ subject}}</h5>
                </div>
                <div class="row p-3">
                    <h5> <span style="text-decoration: underline;font-weight:bold;">Message:</span> {{ message }}</h5>
                </div>
            </div>

            <div class="modal-footer">

                <button type="button" class="btn btn-warning" data-dismiss="modal">Quitter</button>
            </div>
        </div>
    </div>
</div>
{{/each}}