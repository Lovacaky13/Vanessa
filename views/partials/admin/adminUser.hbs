<table class="table ">
    <thead>
        <tr>

            <th scope="col">Nom</th>
            <th scope="col">Prenom</th>
            <th scope="col">E-mail</th>
            <th scope="col">adresse</th>
            <th scope="col">Edit
            <th>
        </tr>
    </thead>
    {{#each dbUser}}
    <tbody>
        <tr>
            <td>{{lastname}}</td>
            <td>{{firstname}}</td>
            <td>{{email}}</td>
            <td>{{adress}} {{zip}} {{city}} </td>
            <td>
                <button type="button" class="btn btn-danger" data-toggle="modal"
                    data-target="#modalDeleteArticle{{_id}}">
                    <i class="fas fa-trash-alt"></i>
                </button>
                <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#updateUser{{_id}}">
                    <i class="fas fa-pencil-alt"></i>
                </button>
            </td>


            <!-- Modal Btn Modifier -->
            <div class="modal fade" id="updateUser{{_id}}" tabindex="-1" role="dialog"
                aria-labelledby="modalModifArticle" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Modification Fiche Utilisateur</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <form action="/adminUser/{{_id}}?_method=PUT" method="post" >
                            <div class="modal-body">
                                <div class="form-group">
                                    <label for="exampleFormControlSelect1">Email</label>
                                    <input type="email" class="form-control" id="inputEmail" value="{{ email }}"
                                        name="email">
                                </div>
                                <div class="form-group">
                                    <label for="exampleFormControlSelect1">Nom</label>
                                    <input type="text" class="form-control" id="inputLastName"
                                        value="{{ lastname }}" name="lastname">
                                </div>
                                <div class="form-group">
                                    <label for="exampleFormControlSelect1"> Prénom</label>
                                    <input type="text" class="form-control" id="inputFirstName"
                                        value="{{ firstname }}" name="firstname">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-warning" data-dismiss="modal">Annuler</button>
                                <button type="submit" class="btn btn-danger"> Confirmer</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


                            <!-- Modal Btn Supprimer -->


            <div class="modal fade" id="modalDeleteArticle{{_id}}" tabindex="-1" role="dialog"
                aria-labelledby="modalDeleteArticleLabel" aria-hidden="true">
  
                <form action="/adminUser/{{_id}}/?_method=DELETE" method="post">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title h5admin" id="modalDeleteArticleLabel">Etes-vous sur de supprimer
                                    l'utilisateur ?
                                </h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <h5 class="h5admin">Vous vous apprèter à supprimer l'utilisateur</h5>
                                <div class="mt-2">
                                    Utilisateur : {{lastname}}
                                    <br>
                                    Id : {{this._id}}
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-warning" data-dismiss="modal">Annuler</button>
                                <button type="submit" class="btn btn-danger">Confirmer</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </tr>
    </tbody>
    {{/each}}
</table>